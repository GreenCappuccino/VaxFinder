<section class="ui-section-feature">
    <div class="ui-layout-container">
        <h1 style="text-align: center;">Create a tracker</h1>
        <form method="POST" action="/submitTracker" class="ui-layout-column-center">
            <div class="ui-component-cta ui-layout-flex" style="margin: 10px">
                <label for="address">Address</label>
                <input name="address" class="ui-component-input ui-component-input-medium" id="address" placeholder="1234 Main Street">
            </div>
            <div class="ui-component-cta ui-layout-flex" style="margin: 10px">
                <label for="radius">Radius (miles)</label>
                <input name="radius" type="number" class="ui-component-input ui-component-input-medium" id="radius" placeholder="25">
            </div>
            <div class="ui-component-cta ui-layout-flex" style="margin: 10px">
                <label for="phone">Phone Number</label>
                <input name="phone" type="tel" class="ui-component-input ui-component-input-medium" id="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder="555-867-5309">
                <a aria-label="#" class="ui-text-note"><small>Format: 555-867-5309</small></a>
                <a aria-label="#" class="ui-text-note" style="font-style: italic"><small>We will never share your phone number with anyone.</small></a>
            </div>
            <div class="ui-component-cta ui-layout-flex" style="margin: 10px">
                <small>Yes, send a notification to this phone number when vaccine appointments are available.</small>
                <input name="phoneconsent" type="checkbox" id="phoneconsent" required>
                <p aria-label="#" class="ui-text-note" style="text-align: center"><small>
                    By creating a tracker, you agree to allow us to contact you regarding available COVID-19 vaccination appointments in your area.
                    <br>
                    You may opt-out at any time by signing in and clicking the "Delete All Trackers" button on the <a href="/myAccount">My Account</a> page.
                </small></p>
            </div>
            <div class="ui-component-cta ui-layout-flex" style="margin: 10px">
                <label for="notes">Notes</label>
                <textarea name="notes" class="ui-component-input ui-component-input-medium" id="notes" rows="3" placeholder="Enter any notes here."></textarea>
            </div>
            <div class="ui-component-cta ui-layout-flex" style="margin: 10px">
                <button type="submit" class="ui-layout-column-center ui-component-button ui-component-button-primary ui-component-button-normal">Create Tracker</button>
            </div>
        </form>
    </div>
</section>
